{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "cacheVariables": {
                "CPM_SOURCE_CACHE": "${sourceDir}/out/.cpm-cache"
            },
            "binaryDir": "${sourceDir}/out/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}"
        },
        {
            "name": "debug",
            "hidden": true,
            "inherits": ["base"],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "hidden": true,
            "inherits": ["base"],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "windows-x64",
            "hidden": true,
            "generator": "Visual Studio 17 2022",
            "architecture": "x64",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "windows-x64-debug",
            "displayName": "Windows x64 MSVC2022 Debug",
            "inherits": [
                "debug",
                "windows-x64"
            ]
        },
        {
            "name": "windows-x64-release",
            "displayName": "Windows x64 MSVC2022 Release",
            "inherits": [
                "release",
                "windows-x64"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "windows-x64-debug",
            "displayName": "Windows x64 MSVC2022 Debug",
            "configurePreset": "windows-x64-debug",
            "configuration": "Debug",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "windows-x64-release",
            "displayName": "Windows x64 MSVC2022 Release",
            "configurePreset": "windows-x64-release",
            "configuration": "Release",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        }
    ]
}